<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.edu.np.mad.madfit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MADFit">
        <activity android:name=".WorkoutCalendar"></activity>
        <activity android:name=".WorkoutSetting" />
        <activity android:name=".ExerciseFinished" />
        <activity android:name=".ViewExerciseTimer" />
        <activity android:name=".ViewExercise" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".MusicPlayerActivity" />
        <activity android:name=".MusicActivity" />
        <activity android:name=".BmiCalculatorActivity" />
        <activity android:name=".BmiActivity" />
        <activity android:name=".ListExercises" />
        <activity android:name=".WorkoutActivity" />
        <activity android:name=".FoodActivity" />

        <receiver android:name=".ReminderBroadcast" />

        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.MADFit.Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>