<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.edu.np.mad.madfit">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MADFit"
        android:usesCleartextTraffic="true">
        <activity android:name=".ExerciseFinish"></activity>
        <activity
            android:name=".CalorieCounter"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WorkoutPlanCreate"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WorkoutPlan"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DailyExercise"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WorkoutCalendar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WorkoutSetting"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NotificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MusicPlayerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MusicActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BmiCalculatorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BmiActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListExercises"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WorkoutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FoodActivity"
            android:screenOrientation="portrait" />

        <receiver android:name=".ReminderBroadcast" />

        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MADFit.Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>